<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@android:color/holo_blue_bright"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/padding_header">

    <ImageView
        android:layout_width="@dimen/header_image_view_size_width"
        android:layout_height="@dimen/header_image_view_size_height"
        android:src="@drawable/account_box_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Some email menu"
        android:textSize="@dimen/text_size_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="@string/mail"
        android:textSize="@dimen/text_size_email" />


</LinearLayout>